<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar  navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
    <a class="navbar-brand" href="<%= billboards_path %>"><img src="/Billboard_Hot_100_logo.png" class="img-responsive"></a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="<%= billboards_path %>">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_billboard_path %>">Add New Billboard</a>
        </li>
      </div>
    </nav>
<div class="container">
<h1><%= @song.id ? 'Edit Song: ' + @song.title : 'Create Song' %></h1>
<br />
<%= form_with(model: [@billboard, @song], local: true ) do |s| %>
  <div class="form-group">
    <%= s.label :title %>
    <%= s.text_field :title, required: true, autofocus: true %>
  </div>
  
  <div class="form-group">
    <%= s.label :rank %>
    <%= s.number_field :rank, required: true, autofocus: true%>
  </div>

  <div class="form-group">
    <label for="artist-list">Select Artist:</label>
    <select class="form-control" id="artist-list">
    <% @artists.each do |a| %>
      <option><%= a.name %></option>
    <% end %>
    </select>
  </div>

    <div class="form-group">
    <label for="billboard-list">Select Billboard:</label>
    <select class="form-control" id="billboard-list">
    <% @billboards.each do |b| %>
      <option><%= b.name %></option>
    <% end %>
    </select>
  </div>


  <%= submit_tag("Submit", :id=>"button", :class=>"btn btn-primary", :name=>"submit") %>
  <% end %>
  </div>
  </body>