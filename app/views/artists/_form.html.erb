<div class="container">
<h1><%= @artist.id ? 'Edit: ' + @artist.name : 'Create New Artist' %></h1>
<br />
<%= form_for  @artist do |artist| %>
  <div class="form-group">
  <%= artist.label :name %>
  <%= artist.text_field :name, required: true, autofocus: true %>
  </div>
  
  <%= submit_tag("Submit", :id=>"button", :class=>"btn btn-primary", :name=>"submit") %>
